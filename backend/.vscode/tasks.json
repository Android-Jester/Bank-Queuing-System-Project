{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Watch",
            "group": "build",
            "type": "shell",
            "command": "bacon --job clippy",
            "problemMatcher": "$rustc-watch",
            "isBackground": true
        },
        {
            "label": "Cargo Run",
            "group": "build",
            "type": "shell",
            "command": [
                "cargo",
                "run",
                "--jobs",
                "2"
            ],
            "isBackground": true
        }
    ]
}